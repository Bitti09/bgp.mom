---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import { getCollection } from "astro:content";

const vpsEntries = await getCollection("vps");
// Filter for providers that have "IP Transit" or "Transit" in their services
const transitProviders = vpsEntries.filter(entry => 
  entry.data.services.some(service => 
    service.toLowerCase().includes("transit") || 
    service.toLowerCase().includes("ip transit")
  )
);
const sortedProviders = transitProviders.sort((a, b) => a.data.title.localeCompare(b.data.title));
---

<Layout title="BGP.mom - IP Transit Providers with BGP support">
  <main class="w-full py-8">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-base-content mb-2">IP Transit Providers</h1>
      <p class="text-lg text-base-content/70">Providers offering IP transit and bandwidth services with BGP support</p>
      <p class="text-sm text-base-content/50 mt-2">Found {sortedProviders.length} providers</p>
    </div>
    
    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-[repeat(auto-fit,minmax(340px,calc(100%/5)))] 2xl:grid-cols-[repeat(auto-fit,minmax(340px,calc(100%/6)))] gap-8 px-4"
    >
      {
        sortedProviders.map((entry) => (
          <div class="flex justify-center h-full">
            <Card {...entry.data} />
          </div>
        ))
      }
    </div>
    
    {sortedProviders.length === 0 && (
      <div class="text-center py-12">
        <p class="text-xl text-base-content/70">No IP transit providers found.</p>
      </div>
    )}
  </main>
</Layout>
