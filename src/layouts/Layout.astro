---
import "../assets/app.css";
// Modern import: Let Vite handle the CSS bundling
import "flag-icons/css/flag-icons.min.css";

import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="List of VPS Providers with BGP support" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <title>{title}</title>

    <ClientRouter />

    <script is:inline>
      // Helper: Get the current theme from local storage or default to light
      const getTheme = () => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        return "light";
      };

      // Helper: Apply the theme to the HTML tag and save it
      const setTheme = (theme) => {
        document.documentElement.setAttribute("data-theme", theme);
        localStorage.setItem("theme", theme);
      };

      // 1. Initial Load: Run immediately to prevent FOUC (Flash of Unstyled Content)
      setTheme(getTheme());

      // 2. Navigation Fix: Re-apply theme after the HTML swap
      // The router resets the <html> tag attributes, so we must restore them here.
      document.addEventListener("astro:after-swap", () => {
        setTheme(getTheme());
      });

      // 3. UI Sync: Update the checkbox state on every page load (initial + navigation)
      document.addEventListener("astro:page-load", () => {
        const themeToggle = document.querySelector(".theme-controller");
        if (themeToggle) {
          themeToggle.checked = getTheme() === "dark";
        }
      });

      // Global Toggle Function
      window.toggleTheme = () => {
        const current = getTheme();
        const next = current === "dark" ? "light" : "dark";
        setTheme(next);
      };
    </script>
  </head>
