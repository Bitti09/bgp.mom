---
import "../assets/app.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="List of VPS Providers with BGP support" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <script is:inline>
      // Initialize theme
      const getInitialTheme = () => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        return "light";
      };
      const theme = getInitialTheme();
      document.documentElement.setAttribute("data-theme", theme);

      // Theme toggle function
      window.toggleTheme = () => {
        const current = document.documentElement.getAttribute("data-theme");
        const target = current === "dark" ? "light" : "dark";
        document.documentElement.setAttribute("data-theme", target);
        localStorage.setItem("theme", target);
      };
    </script>
  </head>
  <body class="min-h-screen bg-base-100">
    <header class="sticky top-0 z-50">
      <div class="navbar bg-base-100 shadow-lg">
        <div class="navbar-start px-4">
          <div class="dropdown">
            <label tabindex="0" class="btn btn-ghost lg:hidden">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                class="inline-block w-5 h-5 stroke-current"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </label>
            <ul
              tabindex="0"
              class="menu menu-md dropdown-content mt-3 z-[1] p-2 shadow bg-base-200 rounded-box w-screen left-0 right-0 origin-top transition-all duration-300 animate-in fade-in slide-in-from-top"
            >
              <li><a href="/">Home</a></li>
              <li><a href="/dedicated">Dedicated</a></li>
              <li><a href="/tunnels">Tunnels</a></li>
              <li><a href="/colocation">Colocation</a></li>
              <li class="disabled"><span>Transit</span></li>
              <li class="disabled"><span>IXP</span></li>
              <li class="disabled"><span>LIR</span></li>
              <li class="divider"></li>
              <li><a href="/policy">Policy</a></li>
              <li>
                <a
                  href="https://github.com/Bitti09/bgp.mom"
                  target="_blank"
                  rel="noopener noreferrer">Source</a
                >
              </li>
            </ul>
          </div>
          <a href="/" class="flex items-center gap-1">
            <div class="text-xl">
              <span class="text-primary font-bold">BGP</span>
              <span class="text-base-content font-bold">.mom</span>
            </div>
            <div class="badge badge-primary badge-sm">v0.5.1</div>
          </a>
        </div>

        <div class="navbar-center hidden lg:flex">
          <ul class="menu menu-horizontal">
            <li><a href="/">Home</a></li>
            <li><a href="/dedicated">Dedicated</a></li>
            <li><a href="/tunnels">Tunnels</a></li>
            <li><a href="/colocation">Colocation</a></li>
            <li class="disabled"><span>Transit</span></li>
            <li class="disabled"><span>IXP</span></li>
            <li class="disabled"><span>LIR</span></li>
            <li><a href="/policy">Policy</a></li>
          </ul>
        </div>

        <div class="navbar-end gap-2">
          <label class="swap swap-rotate btn btn-ghost btn-circle">
            <input
              type="checkbox"
              class="theme-controller"
              aria-label="Toggle theme"
              onclick="toggleTheme()"
            />
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="swap-on h-5 w-5 fill-current"
              viewBox="0 0 24 24"
            >
              <path
