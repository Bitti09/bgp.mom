    border: 1px solid #166534;
  }
  .bgp-fee, .pricing {
    font-size: 0.98rem;
    color: #e5e7eb;
  }
.card-footer {
  display: flex;
  justify-content: center;
  margin-top: 0.5rem;
}
  .visit-btn {
    background: #23272e;
    color: #60a5fa;
    border: 1px solid #334155;
    border-radius: 8px;
    padding: 0.6rem 2.2rem;
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    transition: background 0.15s, color 0.15s;
  }
  .visit-btn:hover {
    background: #60a5fa;
    color: #181c20;
  }
</style>

